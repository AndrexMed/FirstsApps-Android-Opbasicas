<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OperacionesBasicas" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="StyleAndres">
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="styleAndres2">
        <item name="android:textColorHint">@color/teal_700</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">35dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:inputType">numberDecimal</item>
        
    </style>

    <style name="styleBoton">
        <item name="android:textSize">25dp</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>